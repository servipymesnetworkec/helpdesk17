<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_helpdesk_ticket_form_extra_fields" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.extra.fields</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='group_overview']" position="after">
                <group string="Horas de Soporte">
                    <field name="hours_estimated"/>
                    <field name="hours_approved"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
